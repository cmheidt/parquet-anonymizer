{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["${command:pickArgs}"]
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch Anonymizer",
      "program": "${workspaceFolder}/parquet_anonymizer/cli.py",
      "args": [
        "anonymize-file",
        "--in_file",
        "${input:inFile}",
        // "--out_file",
        // "${input:outFile}",
        "--config_file",
        "${input:configFile}"
      ]
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Generate Config",
      "program": "${workspaceFolder}/parquet_anonymizer/cli.py",
      "args": [
        "generate-config",
        "${input:inFile}",
        "--has-header",
        "--delimiter",
        "${input:delimiter}"
      ]
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "inFile",
      "description": "Path to the input file to be anonymized"
    },
    {
      "type": "promptString",
      "id": "outFile",
      "description": "Path to the output file (optional)"
    },
    {
      "type": "promptString",
      "id": "configFile",
      "description": "Path to the configuration file"
    },
    {
      "type": "promptString",
      "id": "delimiter",
      "description": "Delimiter used in the data file, only needed for csv (default: ,)",
      "default": ","
    }
  ]
}
